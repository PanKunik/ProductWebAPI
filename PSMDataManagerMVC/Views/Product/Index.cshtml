@model PSMDataManagerMVC.Models.IndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="accordion container-fluid p-0 m-0" id="accordionExample">
    <div class="card">
        <div class="card-header btn btn-link collapsed bg-darkred p-2 m-0 text-decoration-none" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne" id="headingOne">
            <h2 class="w-100 text-white text-left">
                All products <i class="fa fa-chevron-down float-right"></i>
                @Html.ActionLink("Load prods", "_LoadProducts")
            </h2>
        </div>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body" id="loadProds">
                @*@foreach (var item in Model.Products)
                {
                    @Html.Partial("_ProductPartial", item);
                }*@

                @if (Model.Products.Products != null)
                {
                    @Html.Partial("_GeneralProductsPartial", Model.Products)
                    
                }
            </div>
        </div>
    </div>
    <div class="card">
